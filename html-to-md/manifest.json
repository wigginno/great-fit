{
  "manifest_version": 3,
  "name": "HTML to Markdown Converter",
  "version": "0.1.0",
  "description": "Converts the current page's HTML to Markdown using ShowdownJS.",
  "icons": {
    "48": "icons/icon48.png"
  },
  "action": {
    "default_title": "Convert Page to Markdown"
  },
  "permissions": [
    "scripting",
    "activeTab",
    "clipboardWrite",
    "offscreen",
    "notifications"
  ],
  "background": {
    "service_worker": "background.js"
  }
}
